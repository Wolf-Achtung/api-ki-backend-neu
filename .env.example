# --- Core ---
ENV=production
APP_NAME="KI Status Report API"
LOG_LEVEL=info

# --- CORS (comma-separated) ---
CORS_ALLOW_ORIGINS="https://ki-sicherheit.jetzt,https://www.ki-sicherheit.jetzt,https://ki-foerderung.jetzt,https://make.ki-sicherheit.jetzt,https://www.make.ki-sicherheit.jetzt"

# --- Database ---
DATABASE_URL=${{Postgres.DATABASE_URL}}

# --- Auth ---
JWT_SECRET=change-me
ADMIN_EMAILS="bewertung@ki-sicherheit.jetzt"

# --- SMTP ---
SMTP_HOST=smtp.udag.de
SMTP_PORT=587
SMTP_USER=bewertung@ki-sicherheit.jetzt
SMTP_PASS=***
SMTP_FROM=kontakt@ki-sicherheit.jetzt
SMTP_FROM_NAME="KI-Readiness"

# --- LLM ---
OPENAI_API_KEY=***
OPENAI_MODEL_DEFAULT=gpt-4o
OPENAI_TIMEOUT=30
